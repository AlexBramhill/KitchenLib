  <Target Name="CopyToPlateUp" AfterTargets="Build">
    <Message Text="Copying TestMod to PlateUp Mods folder" Importance="High" />
    <Copy SourceFiles="$(OutputPath)\KitchenLib.TestMod.dll" DestinationFolder="$(PlateUpGameFolder)\Mods" ContinueOnError="false" />
  </Target>
</Project>
